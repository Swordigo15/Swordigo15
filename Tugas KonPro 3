#include <stdio.h>

int main()
{
    float num1;
    float num2;
    
    char opt;
    
    float answer;
    
    for(int i; i > -1; i++){
        
        printf("Number 1 : ");
        scanf("%f", &num1);
        printf("Number 2 : ");
        scanf("%f", &num2);
        printf("Operation : ");
        scanf("%s", &opt);
        
        switch(opt){
            case '+':
                answer = num1 + num2;
                break;
            case '-':
                answer = num1 - num2;
                break;
            case '*':
                answer = num1 * num2;
                break;
            case '/':
                answer = num1 / num2;
                break;
            default :
                printf("I don't know the operation");
                break;
        }
        
        printf("%.2f %.2f %.2f\n",num1, num2, answer);
    }
}
