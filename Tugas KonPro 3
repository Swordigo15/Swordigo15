#include <stdio.h>

int main()
{
    int num1;
    int num2;
    
    char opt;
    
    int answer;
    
    for(int i; i > -1; i++){
        printf("Number 1 : ");
        scanf("%d", &num1);
        printf("Number 2 : ");
        scanf("%d", &num2);
        printf("Operation : ");
        scanf("%s", &opt);
        
        switch(opt){
            case '+':
                answer = num1 + num2;
                break;
            case '-':
                answer = num1 - num2;
                break;
            case '*':
                answer = num1 * num2;
                break;
            case '/':
                answer = (float)num1 / num2;
                answer = (float)answer;
                break;
            case '%':
                answer = num1 % num2;
                break;
            default :
                printf("I don't know the operation");
                break;
        }
        
        printf("%d %d %d\n",num1, num2, answer);
    }
}
